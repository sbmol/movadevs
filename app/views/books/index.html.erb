<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Bookday</th>
      <th>Qadult</th>
      <th>Qchild</th>
      <th>Event</th>
      <th>code</th>
      <th>Total child</th>
      <th>total adult</th>
      <th>total final</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bookday %></td>
        <td><%= book.qadult %></td>
        <td><%= book.qchild %></td>
        <td><%= book.event_id %></td>
        <td><%= book.code %></td>
        <td>$<%= book.totalchild %></td>
        <td>$<%= book.totaladult %></td>
        <td>$<%= book.totalfinal %></td>
        <td><%= link_to t('common.show'), book, class:"btn btn-light" %></td>
        <td><%= link_to t('common.edit'), edit_book_path(book), class:"btn btn-warning" %></td>
        <td><%= link_to t('common.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class:"btn btn-outline-primary" %>
<%= link_to 'New event', new_event_path, class: "btn btn-outline-success" %>
