
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :bookday %>
    <%= f.input :qadult %>
    <%= f.input :qchild %>
    <%= f.association :event %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
